<div class="container">
<h1 class='center'> <%= @gallery.title %>
  <div class='card'>
    <div class='card-image'>
      <div class="carousel carousel-slider center">
        <% @gallery.gallery_images.each do |image| %>
          <%= image_tag image.image.url, class: 'carousel-item' %>
        <% end %>
      </div>
    </div>
  </div>
</div>