<p id="notice"><%= notice %></p>
<div class='container single-post'>
  <h1><%= @post.title %></h1>
  <div class="divider"></div><br>
  <div class="meta-info">
    <i class="inline-icons material-icons">today</i>
    <span><%= @post.created_at.strftime('%B %e, %Y') %></span>
    <i class="inline-icons material-icons">account_circle</i>
    <span><%= @post.user.name %></span>
  </div>
  <div class="post-content section">
    <%= @post.body %>
  </div>
  <div class="comments">
    <h3>Comments</h3>
    <%= render(partial: 'comments/comment', collection: @post.comments) %>
  </div>
  <div class="reply">
    <h3> Leave a Comment</h3>
    <form>
      <div class="row">
        <div class="input-field col s12">
          <textarea id="textarea1" class="materialize-textarea" rows="3"></textarea>
          <label for="textarea1">Write your comment</label>
        </div>
      </div>
      <button class="btn waves-effect waves-light" type="submit" name="action">Submit
        <i class="material-icons right">send</i>
      </button>
    </form>
  </div>
</div>