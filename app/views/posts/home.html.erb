<div class='header-banner'>
  <div class="row">
    <% @menus.each do |menu| %>
    <%= link_to menu[:url] do%>
    <div class="banner-tab col s4 valign-wrapper hoverable z-depth-1">
      <div class="overlay">
        <div class="overlay-text"><h1> <%= menu[:title] %> </h1></div>
      </div>
      <%= cl_image_tag(menu[:image_url], :width => 455, :height => 350, 
                           :crop => :fill) %>
    </div>
    <% end%>
    <% end %>
  </div>
</div>
<div class='blog text-center'>
  <h1 class="center-align"> Blog </h1>

  <div class="row">
    <div class="col s6 offset-s3 container">

      <div class="row">
        <div class="input-field">
          <i class="material-icons prefix">search</i>
          <textarea id="search" class="materialize-textarea"></textarea>
          <label for="search">Search</label>
        </div>
      </div>

      <div class="row center-align categories">
        <%= link_to "All", posts_path(search: params[:search]), class: "waves-effect waves-light btn" %>
        <% @categories.each do |category| %>
          <%= link_to "#{category.name}", posts_path(category: category.name, search: params[:search]), class: "waves-effect waves-light btn" %>
        <% end %>"
      </div>
      <h3 class="center-align"><%= params[:category] %></h3>
    </div> 
  </div>


  <div class='flex-container'>

    <% @posts.each do |post| %>
    <%= link_to post do %>
    <div class='post'>
      <div class="card hoverable z-depth-1">
        <div class="card-image">
          <% unless post.thumbnail_url.nil? %><%= image_tag post.thumbnail.thumb.url %><br /><% end %>
        </div>
        <div class="card-content">
          <h5><b><%= post.title%></b></h5>
          <p><%= post.summary %></p>
        </div>
        <div class="card-action">
          <a href="#"><%= post.category.name %></a>
        </div>
      </div>
    </div>
    <% end%>
    <% end %>
  </div>
</div>