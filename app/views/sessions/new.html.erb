<h1 class="text-center mt-5">Login</h1>
<div class="container pt-3">
  <div class="row justify-content-sm-center">
    <div class="col-sm-10 col-md-6">
      <div class="card border-info">
        <div class="card-header">Login to continue</div>
        <div class="card-body">
          <div class="row">
            <div class="col-md-4 text-center">
              <%= image_tag 'anonymous-avatar.jpg', class: "rounded-circle mb-4", width: 100, height: 100 %>
            </div>
            <div class="col-md-8">
              <%= form_tag '/login', class: "form-signin" do %>
                <%= text_field_tag :email, nil, class: "form-control mb-2", placeholder: "Email", required: true, autofocus: true %>
                <%= password_field_tag :password, nil, class: "form-control mb-2", placeholder: "Password", required: true %>
                <button class="btn btn-lg btn-primary dark-gradient btn-block mb-1" type="submit">Login</button>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
