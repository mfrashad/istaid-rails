<div class='blog text-center container-fluid p-5'>
  <h1 class="center-align"> Kegiatan </h1>
  <%= render 'layouts/searchbar' %>
</div>


  <div class='d-flex flex-wrap justify-content-center'>
    <% @events.each do |event| %>
    
    <div class="post card" data-aos="fade-up">
      <!-- Card image -->
      <div class="view overlay">
        <% if event.thumbnail_url %>
          <%= image_tag event.thumbnail.thumb.url, class: 'card-img-top img-fluid' %>
        <% else %>
          <%= image_tag 'missing-image.jpg', class: 'card-img-top img-fluid' %>
        <% end %>
        <%= link_to event do %>
          <div class="mask rgba-white-slight"></div>
        <% end %>
      </div>

      <!-- Card content -->
      <div class="card-body">

        <!-- Title -->
        <h4 class="card-title"><b><%= event.title%></b></h4>
        <!-- Text -->
        <p class="card-text"><%= event.summary %></p>
        <!-- Button -->
        <a href="<%=posts_path(category: event&.category&.name, search: params[:search])%>" class="btn dark-gradient"><%= event.category.name %></a>

      </div>

    </div>
    <!-- Card -->
    <% end%>
    
  </div>
  <div class="center">
    <%= will_paginate @events, renderer: @custom_paginate_renderer %>
  </div>
</div>