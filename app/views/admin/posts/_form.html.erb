<div class="card-panel">
<%= form_for([:admin, @post]) do |f| %>
<%= f.hidden_field :user_id, value: current_user.id %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <ul>
      <li><h6><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h6></li>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
    <script>
      M.toast({html: $("#error_explanation").html()});
    </script>
  <% end %>
  <div class="field">
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :published_at %><br>
    <%= f.date_field :published_at %>
  </div>
  <div class="input-field">
    <%= f.label :category_id %><br>
    <%= f.collection_select(:category_id, Category.post, :id, :name) %>
  </div>
  <%= image_tag(@post.thumbnail.thumb.url, class: 'img_prev', style: ('display:none;' if @post.thumbnail.nil? )) %>
  <div class="file-field input-field">
    <div class="btn">
      <span>Image</span>
      <%= f.file_field :thumbnail, onchange: 'image_preview(this);' %>
    </div>
    <div class="file-path-wrapper">
      <input class="file-path validate" type="text" placeholder="Upload the thumbnail here">
    </div>
  </div>
  <div class="field">
    <%= f.label :summary %><br>
    <%= f.text_area :summary, class: "materialize-textarea", id: "summary-textarea", data: { length: 300 }, placeholder: "Write the post summary here" %>
  </div>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.cktext_area :body, class: 'someclass', rows: 40, ckeditor: { language: 'us' } %>
  </div>
  <br>
  <button class="btn waves-effect waves-light" type="submit" name="action">Submit
    <i class="material-icons right">send</i>
  </button>
<% end %>
</div>
<script>
$('textarea#summary-textarea').characterCounter();
</script>
