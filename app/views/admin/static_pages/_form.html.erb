<%= javascript_include_tag Ckeditor.cdn_url%>
<div class="card-panel">
<%= form_for([:admin, @static_page]) do |f| %>
  <% if @static_page.errors.any? %>
    <div id="error_explanation">
      <ul>
      <li><h6><%= pluralize(@static_page.errors.count, "error") %> prohibited this post from being saved:</h6></li>
      <% @static_page.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
    <script>
      M.toast({html: $("#error_explanation").html()});
    </script>
  <% end %>
  <div class="field">
    <%= f.label :body %><br>
    <%= f.cktext_area :body, class: 'someclass', rows: 40, ckeditor: { language: 'us' } %>
  </div>
  <br>
  <button class="btn waves-effect waves-light" type="submit" name="action">Submit
    <i class="material-icons right">send</i>
  </button>
<% end %>
</div>
<script>
$('textarea#summary-textarea').characterCounter();
</script>
