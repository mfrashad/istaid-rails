<div class="container">
<h3> Comments </h3>
<%= link_to admin_root_path, class:'btn waves-effect waves-light' do %>
  <i class="material-icons left">arrow_back</i>Back
<% end%>
<div class="card-panel">
<table class="table table-hover">
  <thead>
    <tr>
      <th>Id </th>
      <th>Name</th>
      <th>Email</th>
    </tr>
  </thead>
  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.id %></td>
        <td><%= comment.name %></td>
        <td><%= comment.email %> </td>
        <td><%= link_to 'Show', post_path(comment.post_id) if comment.post_id %></td>
        <td><%= link_to 'Edit', edit_admin_comment_path(comment) %></td>
        <td><%= link_to 'Destroy', [:admin, comment], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
